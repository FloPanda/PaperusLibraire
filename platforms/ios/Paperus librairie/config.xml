<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.paperus.librairie" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <name>Paperus librairie</name>
    <description>
        Application à destination des libraires pour leur permettre de créer des offres couplées même s'ils n'ont pas accès à une imprimante ou un logiciel de caisse compatible.'
    </description>
    <author email="contact@paperus.fr" href="http://www.paperus.fr">
        Paperus Team
    </author>
    <preference name="orienation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <icon src="icon.png" />
    <icon gap:platform="ios" height="57" src="icons/ios/icon.png" width="57" />
    <icon gap:platform="ios" height="114" src="icons/ios/icon_at_2x.png" width="114" />
    <feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <gap:splash gap:platform="ios" height="480" src="splash/ios/Default.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="splash/ios/Default_at_2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="splash/ios/Default_iphone5.png" width="640" />
    <gap:splash gap:platform="ios" height="748" src="splash/ios/Default-Landscape.png" width="1024" />
    <gap:splash gap:platform="ios" height="1004" src="splash/ios/Default-Portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="1496" src="splash/ios/Default-Landscape_at_2x.png" width="2048" />
    <gap:splash gap:platform="ios" height="2008" src="splash/ios/Default-Portrait_at_2x.png" width="1536" />
    <gap:plugin name="com.arnia.plugins.smsbuilder" />
    <content src="index.html" />
    <access origin="*" />
</widget>

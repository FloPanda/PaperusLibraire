<?xml version='1.0' encoding='utf-8'?>
<widget
    id="fr.paperus.librairie"
    version="1.0.1"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Paperus librairie</name>
    <description>
        Application à destination des libraires pour leur permettre de créer des offres couplées même s'ils n'ont pas accès à une imprimante ou un logiciel de caisse compatible.'
    </description>
    <author email="contact@paperus.fr" href="http://www.paperus.fr">
        Paperus Team
    </author>
    <preference name="orienation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <icon src="icon.png" />
    <icon src="icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <gap:splash src="splash/ios/Default.png"                 gap:platform="ios" width="320"  height="480"  />
    <gap:splash src="splash/ios/Default_at_2x.png"           gap:platform="ios" width="640"  height="960"  />
    <gap:splash src="splash/ios/Default_iphone5.png"         gap:platform="ios" width="640"  height="1136" />
    <gap:splash src="splash/ios/Default-Landscape.png"       gap:platform="ios" width="1024" height="748"  />
    <gap:splash src="splash/ios/Default-Portrait.png"        gap:platform="ios" width="768"  height="1004" />
    <!-- retina iPad -->
    <gap:splash src="splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="splash/ios/Default-Portrait_at_2x.png"  gap:platform="ios" width="1536" height="2008" />
    <icon gap:density="ldpi" gap:platform="android" src="icons/android/icon-36-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="icons/android/icon-48-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="icons/android/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="icons/android/icon-96-xhdpi.png" />

    

    <content src="index.html" />
    <access origin="*" />
</widget>
